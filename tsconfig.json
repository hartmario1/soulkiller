{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "removeComments": true,
    "pretty": true,
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  }
}
